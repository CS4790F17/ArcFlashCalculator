@model ArcFlashCalculator.Models.Login

@{
    ViewBag.Title = "Login";
}

<div class="container-fluid mx-auto">
    <h2>Login</h2>

    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.LabelFor(model => model.user.Email, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                    @Html.EditorFor(model => model.user.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.user.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.LabelFor(model => model.user.Password, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                    @Html.PasswordFor(model => model.user.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.user.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="userPassErr">
                <p style="color:red;padding-left:190px;">You have entered an invalid E-mail and/or Password combination.</p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>

@{
    if (Model.Error)
    {
        <style>
            div.userPassErr {
                display: block;
            }
        </style>
    }
    else
    {
        <style>
            div.userPassErr {
                display: none;
            }
        </style>
    }
}